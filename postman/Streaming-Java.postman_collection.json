{
  "info": {
    "name": "Streaming-Java API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "streaming-java-collection"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"usuario@example.com\",\n  \"password\": \"tu_clave\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "pm.test('Token presente', function () {",
                  "  pm.expect(json.token).to.be.a('string').and.not.empty;",
                  "});",
                  "",
                  "pm.environment.set('token', json.token);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Listar usuarios",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/usuarios/obtener", "host": ["{{baseUrl}}"], "path": ["usuarios", "obtener"] }
          }
        },
        {
          "name": "Obtener usuario por id",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/usuarios/{{id}}", "host": ["{{baseUrl}}"], "path": ["usuarios", "{{id}}"] }
          }
        },
        {
          "name": "Crear usuario",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/usuarios/", "host": ["{{baseUrl}}"], "path": ["usuarios", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Juan PÃ©rez\",\n  \"email\": \"juan.perez@example.com\",\n  \"planName\": { \n    \"id\": 1 \n  }\n}"
            }
          }
        },
        {
          "name": "Eliminar usuario",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/usuarios/{{id}}", "host": ["{{baseUrl}}"], "path": ["usuarios", "{{id}}"] }
          }
        }
      ]
    },
    {
      "name": "Planes",
      "item": [
        {
          "name": "Listar planes",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/planes/obtener", "host": ["{{baseUrl}}"], "path": ["planes", "obtener"] }
          }
        },
        {
          "name": "Obtener plan por id",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/planes/{{id}}", "host": ["{{baseUrl}}"], "path": ["planes", "{{id}}"] }
          }
        },
        {
          "name": "Crear plan",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": { "raw": "{{baseUrl}}/planes/", "host": ["{{baseUrl}}"], "path": ["planes", ""] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombrePlan\": \"Premium\",\n  \"precio\": 19.99,\n  \"duracionDias\": 30\n}"
            }
          }
        },
        {
          "name": "Eliminar plan",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/planes/{{id}}", "host": ["{{baseUrl}}"], "path": ["planes", "{{id}}"] }
          }
        }
      ]
    }
  ]
}